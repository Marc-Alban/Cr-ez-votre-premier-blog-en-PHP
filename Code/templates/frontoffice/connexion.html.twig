{% extends "frontoffice/layout.html.twig" %}

{% block title %}Connexion
{% endblock %}

{% block content %}
	<div class="container">
		<div class="raw m-6">
			<div class="error"></div>
			<div class="succes"></div>
			<form method="POST" action="/?p=connexion&action=connexion">
				<div class="container mb-5">
					<div class="md-form">
						<label for="email">E-mail:</label>
						<input id="email" class="form-control" type="text" name="email">
					</div>
					<div class="md-form">
						<label for="password">Mot de passe:</label>
						<input id="password" class="form-control" type="password" name="password">
					</div>
					<div class="md-form">
						<input type="hidden" name="token" id="token" value="{{session.token}}"/>
					</div>
				</div>
				<input class="btn btn-primary" type="submit" value="Se connecter">
			</form>
		</div>
		<div class="forgot form-footer">
			<span>Pas de compte ?
				<a href="/?page=inscription">Cliquer ici</a>
			</span>
		</div>
	</div>
{% endblock %}
