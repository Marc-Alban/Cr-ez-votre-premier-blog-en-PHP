{% extends "backoffice/layout.html.twig" %}

{% block title %}Ajouter un article
{% endblock %}

{% block content %}
	<div class="container">
		<div class="mainbox mx-auto col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 mt-5">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="panel-title text-center">Ajouter un article</div>
				</div>
				<div class="panel-body mt-5">
					{% if data.valdel.sendPost %}
						<div class="alert alert-primary" role="alert">
							{{ data.valdel.sendPost }}</div>
					{% elseif data.valdel.error %}
						{% for errors in data.valdel.error %}
						<div class="alert alert-danger" role="alert">
							{{ errors }}</div>
						{% endfor %}
					{% endif %}
					<form method="POST" action="/?page=addPost&action=addPostAction" enctype="multipart/form-data">
						<input id="title" class="form-control flex-fill  mr-0 mr-sm-2 mb-3 mb-sm-0" placeholder="Entrer votre titre" type="text" name="title"><br>
						<input id="image" class="flex-fill col-sm-2 col-md-12 mr-0 mr-sm-2 mb-3 mb-sm-2" type="file" name="imagePost"><br>
						<textarea class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0 textAreaForm" placeholder="Entrer le chapo" name="chapo"></textarea><br>
						<textarea class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0 textAreaForm" placeholder="Entrer votre descrition" name="description"></textarea><br>
						<input type="hidden" name="token" id="token" value="{{session.token}}"/>
						<button class="btn btn-primary mx-auto" type="submit" name="submit">Ajouter l'article</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
