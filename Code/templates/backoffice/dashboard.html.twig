{% extends "backoffice/layout.html.twig" %}
{% block title %}Dashboard
{% endblock %}
{% block content %}
	<div class="container">
		<div class="mainbox mx-auto col-md-12 col-md-offset-12 col-sm-12  mt-5">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2 class="panel-title text-center">
					Dashboard
					</h2>
				</div>
				<div class="container">
					<div class="row">
						<p>
							<a href="/?page=allCommentsBack&perpage=1">Gerer les commentaires</a>
							|
							<a href="/?page=allPostsBack&perpage=1">Gerer les articles</a>
							|
							<a href="/?page=userManagement&perpage=1">Gerer les rôles utilisateurs</a>
						</p>
					</div>
				</div>
				<div class="container">
					<div class="row">
						<div class="col-md-6 col-sm-6  ">
							<div class="card h-md-100">
								<div class="card-header pb-0">
									<h6 class="mb-0 mt-2 d-flex align-items-center">
										Commentaires validés
										<span class="ml-1 text-400" data-toggle="tooltip" data-placement="top">
											<h6></div>
											<div class="card-body d-flex align-items-end">
												<div class="row flex-grow-1">
													<div class="col">
														<div class="fs-4 font-weight-normal text-sans-serif text-700 line-height-1 mb-1">
															{{data.comment}}
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="card h-md-100">
											<div class="card-header pb-0">
												<h6 class="mb-0 mt-2 d-flex align-items-center">
													Commentaires non validés
													<span class="ml-1 text-400" data-toggle="tooltip" data-placement="top">
														<h6></div>
														<div class="card-body d-flex align-items-end">
															<div class="row flex-grow-1">
																<div class="col">
																	<div class="fs-4 font-weight-normal text-sans-serif text-700 line-height-1 mb-1">
																		{{data.commentDisable}}
																	</div>
																</div>
															</div>
														</div>
													</div>
													<div class="card h-md-100">
														<div class="card-header pb-0">
															<h6 class="mb-0 mt-2 d-flex align-items-center">
																Articles en ligne<span class="ml-1 text-400" data-toggle="tooltip" data-placement="top">
																	<h6></div>
																	<div class="card-body d-flex align-items-end">
																		<div class="row flex-grow-1">
																			<div class="col">
																				<div class="fs-4 font-weight-normal text-sans-serif text-700 line-height-1 mb-1">
																					{{data.post}}
																				</div>
																			</div>
																		</div>
																	</div>
																</div>
																<div class="card h-md-100">
																	<div class="card-header pb-0">
																		<h6 class="mb-0 mt-2 d-flex align-items-center">
																			Nombre d'utilisateurs<span class="ml-1 text-400" data-toggle="tooltip" data-placement="top">
																				<h6></div>
																				<div class="card-body d-flex align-items-end">
																					<div class="row flex-grow-1">
																						<div class="col">
																							<div class="fs-4 font-weight-normal text-sans-serif text-700 line-height-1 mb-1">
																								{{data.user}}
																							</div>
																						</div>
																					</div>
																				</div>
																			</div>
																		</div>
																	</div>
																</div>
															{% endblock %}
