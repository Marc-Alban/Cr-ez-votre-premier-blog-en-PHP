{% extends "backoffice/layout.html.twig" %}

{% block title %}Modifier le mot de passe
{% endblock %}

{% block content %}
	<div class="container">
		<div  class="mainbox mx-auto col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 mt-5">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="panel-title text-center">Modifier le mot de passe</div>
				</div>
				<div class="panel-body mt-5">

{#--------------------------CONDITION-DATA----------------------------#}
					{% if data.verif.success %}
						{#--------------------------SUCCES-MESSAGE----------------------------#}
						{% for validation in data.verif.success %}
							<div class="alert alert-primary" role="alert"> {{validation}}
						</div>
						{% endfor %}
						{#-------------------------END-CONDITION-DATA----------------------------#}
						{#-------------------------END-SUCCES-MESSAGE----------------------------#}
					{% endif %}
					{#--------------------------CONDITION-DATA----------------------------#}
					{% if data.verif.error %}
						{#--------------------------ERROR-MESSAGE----------------------------#}
						{% for errors in data.verif.error %}
							<div class="alert alert-danger" role="alert">
								{{errors}}
							</div>
						{% endfor %}
						{#--------------------------ERROR-MESSAGE----------------------------#}
					{% endif %}
					<a href="/?page=accountManagement"><button class="btn btn-primary mx-auto">retour</button></a>
					<hr>
					<form method="POST" action="/?page=password&action=modifPass">
						<input id="lastpassword" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" placeholder="Entrer votre mot de passe actuel" type="password" name="lastPassword"><br>
						<input id="password" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" placeholder="Entrer votre nouveau mot de passe" type="password" name="password"><br>
						<input id="passwordConfirmation" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" placeholder="Entrer le mot de passe de confirmation" type="password" name="passwordConfirmation"><br>
						<input type="hidden" name="token" id="token" value="{{session.token}}"/>
						<button class="btn btn-primary mx-auto" type="submit">Modifier le mot de passe</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
